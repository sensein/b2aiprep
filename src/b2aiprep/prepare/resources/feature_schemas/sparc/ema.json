{
  "fields": [
    {
      "name": "participant_id",
      "type": "string",
      "description": "Unique identifier for each participant."
    },
    {
      "name": "session_id",
      "type": "string",
      "description": "Unique identifier for each session."
    },
    {
      "name": "task_name",
      "type": "string",
      "description": "The audio task conducted for the recording."
    },
    {
      "name": "n_frames",
      "type": "integer",
      "description": "Number of time frames in the EMA tensor (variable per recording)."
    },
    {
      "name": "ema",
      "type": "array",
      "description": "Estimated articulatory kinematics (EMA) generated by an articulatory inversion model.",
      "extras": {
        "tensor": {
          "dtype": "float32",
          "ndim": 2,
          "dims": ["time", "articulator_channel"],
          "shape": [null, 12],

          "axis": {
            "time": {
              "sampling_rate_hz": 50,
              "description": "Temporal resolution of the predicted EMA trajectories."
            },
            "articulator_channel": {
              "n_channels": 12,
              "labels": [
                "TDX", "TDY",
                "TBX", "TBY",
                "TTX", "TTY",
                "LIX", "LIY",
                "ULX", "ULY",
                "LLX", "LLY"
              ],
              "description": "Channels correspond to X/Y positions of six articulators: tongue dorsum (TD), tongue body (TB), tongue tip (TT), lower incisor (LI), upper lip (UL), lower lip (LL)."
            }
          },

          "config": {
            "model_name": "multi"
          },

          "provenance": {
            "software": "speech-articulatory-coding",
            "version": "0.1.0",
            "command": "coder = load_model(model_name='multi'); coder.encode(waveform)",
            "extraction_date": null,
            "software_reference": {
              "title": "Coding Speech through Vocal Tract Kinematics",
              "authors": "Cho et al.",
              "year": 2024,
              "doi": "10.48550/arXiv.2406.12998",
              "url": "https://arxiv.org/abs/2406.12998"
            }
          },

          "serialization": {
            "storage": "parquet_nested_list",
            "parquet_type": "list<list<float>>",
            "compression": "zstd"
          }
        }
      }
    }
  ],
  "primaryKey": ["participant_id", "session_id", "task_name"]
}
